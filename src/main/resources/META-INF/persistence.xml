<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="application">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>es.makigas.ejemplos.fullstack.models.Alumno</class>
    <class>es.makigas.ejemplos.fullstack.models.Asignatura</class>
    <class>es.makigas.ejemplos.fullstack.models.Matricula</class>
    <class>es.makigas.ejemplos.fullstack.models.Profesor</class>
    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/escuela?useUnicode=true&amp;characterEncoding=utf-8"/>
      <property name="jakarta.persistence.jdbc.user" value="root"/>
      <property name="jakarta.persistence.jdbc.password" value="escuela"/>
      <property name="hibernate.dialect" value=""/>
      <property name="hibernate.hbm2ddl.auto" value=""/>
      <property name="hibernate.archive.autodetection" value="class, hbm"/>
    </properties>
  </persistence-unit>
</persistence>
